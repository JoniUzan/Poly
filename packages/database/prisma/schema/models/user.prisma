// User model for authentication and authorization
enum UserRole {
  ADMIN
  MANAGER
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String   // Store hashed password only
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
